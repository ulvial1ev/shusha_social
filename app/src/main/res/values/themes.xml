<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/transparent</item>
        <!-- Customize your theme here. -->

        <item name="fontFamily">@font/montserratbold</item>
    </style>

    <style name="colored_Checkbox" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorAccent" >#06d6a0</item>
        <item name="android:textColorSecondary">@color/grey</item>
    </style>
    <style name="floatingaction" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorAccent">#0077b6</item>
    </style>

    <style name="navbar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:textSize">10sp</item>
        <item name="iconPadding">0sp</item>
    </style>

</resources>