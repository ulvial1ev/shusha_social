<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="190dp"
        android:text="İstifadəçi"
        android:textColor="@color/grey"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="91dp"
        android:layout_height="25dp"
        android:layout_marginEnd="100dp"
        android:drawableStart="@drawable/ic_info"
        android:text="Info"
        android:textAlignment="center"
        android:textColor="@color/grey"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/tvnameshow"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/tvnameshow"
        android:layout_width="360dp"
        android:layout_height="19dp"
        android:layout_marginStart="28dp"
        android:drawableStart="@drawable/ic_profile"
        android:drawablePadding="6dp"
        android:text="Ad :"
        android:textColor="@color/grey"
        app:layout_constraintBottom_toTopOf="@+id/tvemailshow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/tvemailshow"
        android:layout_width="360dp"
        android:layout_height="19dp"
        android:layout_marginStart="28dp"
        android:drawableStart="@drawable/ic_email"
        android:drawablePadding="6dp"
        android:text="Email :"
        android:textColor="@color/grey"
        app:layout_constraintBottom_toTopOf="@+id/tvschoolshow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvnameshow" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivtopiclogo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/ic_launcher_background"
        app:civ_border_color="@color/grey"
        app:layout_constraintBottom_toBottomOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="@+id/textView2" />

    <TextView
        android:id="@+id/tvschoolshow"
        android:layout_width="378dp"
        android:layout_height="17dp"
        android:layout_marginStart="28dp"
        android:drawableStart="@drawable/ic_school"
        android:drawablePadding="6dp"
        android:text="Məktəb/Universitet :"
        android:textColor="@color/grey"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline18"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvemailshow" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="459dp" />
</androidx.constraintlayout.widget.ConstraintLayout>